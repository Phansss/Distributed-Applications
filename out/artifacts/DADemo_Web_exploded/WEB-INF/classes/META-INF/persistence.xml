<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="DADemoPU">
        <jta-data-source>jdbc/mysql/res</jta-data-source>
        <class>entities.CourseEntity</class>
        <class>entities.PersonEntity</class>
        <class>entities.CommentEntity</class>
        <class>entities.ProfessorEntity</class>
        <class>entities.ratingComment</class>
        <class>entities.ratingTextComment</class>
        <class>entities.textComment</class>

        <!-- <exclude-unlisted-classes>false</exclude-unlisted-classes> -->
        <properties><property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>
</persistence>
